---
interface Props {
  title: string;
  imgPath: string;
}

const { title, imgPath } = Astro.props;
---

<div
  class='group aspect-square border border-white p-2 lg:aspect-auto lg:border-none lg:p-0'
>
  <div class='relative grid h-full w-full place-items-center'>
    <img
      src={imgPath}
      alt={title}
      style=`background-image: url(${imgPath});`
      class='absolute z-[-1] h-full w-full object-cover object-center lg:grayscale lg:transition-all lg:group-hover:grayscale-0'
    />
    <h3
      class='text-center text-5xl text-black lg:text-white lg:transition-colors lg:group-hover:text-black'
      style='-webkit-text-stroke-width: 1px; -webkit-text-stroke-color: grey;'
    >
      {title}
    </h3>
  </div>
</div>
