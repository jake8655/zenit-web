---
interface Props {
  name: string;
  img: string;
  role: string;
  links: {
    twitter: string;
    facebook: string;
    linkedin: string;
    instagram: string;
  };
}

const { name, img, role, links } = Astro.props;

const convertPlatformToIcon = {
  twitter: 'fa-twitter',
  facebook: 'fa-facebook-f',
  linkedin: 'fa-linkedin-in',
  instagram: 'fa-instagram',
};
---

<div class='bg-white p-1 transition-shadow hover:shadow-xl'>
  <div class='bg-banner pb-4'>
    <img src={`/assets/${img}.jpg`} alt={name} />
    <div class='flex flex-col items-center'>
      <div class='mt-[-25px] flex gap-2 bg-banner p-4 text-white'>
        {
          Object.keys(links).map(platform => (
            // eslint-disable-next-line @typescript-eslint/no-unsafe-return
            <a
              href={`https://${platform}.com/${
                links[platform as keyof typeof links]
              }`}
              target='_blank'
              rel='noopener noreferrer'
            >
              <i
                class={`fab ${
                  convertPlatformToIcon[
                    platform as keyof typeof convertPlatformToIcon
                  ]
                } bg-primary p-3 transition-colors hover:bg-third hover:text-secondary`}
              />
            </a>
          ))
        }
      </div>
      <h4 class='text-xl font-semibold'>{name}</h4>
      <p class='text-primary'>{role}</p>
    </div>
  </div>
</div>
