---
interface Props {
  name: string;
  img: string;
  role: string;
}

const { name, img, role } = Astro.props;
---

<div class='bg-white p-1 hover:shadow-xl'>
  <div class='bg-banner pb-4'>
    <img src={img} alt={name} />
    <div class='flex flex-col items-center'>
      <div class='mt-[-25px] flex gap-2 bg-banner p-4 text-white'>
        <i class='fab fa-twitter bg-primary p-3'></i>
        <i class='fab fa-facebook-f bg-primary p-3'></i>
        <i class='fab fa-linkedin-in bg-primary p-3'></i>
        <i class='fab fa-instagram bg-primary p-3'></i>
      </div>
      <h4 class='text-xl font-semibold'>{name}</h4>
      <p class='text-primary'>{role}</p>
    </div>
  </div>
</div>
