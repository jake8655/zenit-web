---
interface Props {
  path: string;
  name: string;
  text: string;
  classNames?: string;
}

const { path, name, text, classNames } = Astro.props;
---

<div class={`flex flex-col items-center gap-6 ${classNames}`}>
  <img src={path} class='rounded-full' width='242' />
  <div
    class='triangle relative w-[400px] rounded-lg bg-[#CCCCCC] p-6 text-center text-secondary before:absolute before:left-[50%] before:top-[-17px] before:w-0 before:translate-x-[-50%] before:content-[""]'
  >
    <h3 class='mb-2 text-xl'>{name}</h3>
    <p class='text-sm'>{text}</p>
  </div>
</div>

<style>
  .triangle:before {
    border-left: 17px solid transparent;
    border-right: 17px solid transparent;
    border-bottom: 17px solid #cccccc;
  }
</style>
