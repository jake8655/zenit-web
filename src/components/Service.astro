---
interface Props {
  title: string;
  img: string;
  alt: string;
}

const { title, img, alt } = Astro.props;
---

<div class='bg-banner transition-shadow hover:shadow-xl'>
  <div class='overflow-hidden'>
    <img src={img} {alt} class='transition-transform hover:scale-105' />
  </div>
  <h4 class='p-4 text-center font-semibold'>{title}</h4>
</div>
